<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".profile">

    <TextView
        android:id="@+id/notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        android:layout_marginStart="220dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="54dp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_pic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/ic_baseline_person_outline_24"
        android:layout_below="@id/notification"
        android:layout_marginTop="30dp"

        app:shapeAppearanceOverlay="@style/circular"
        android:background="@color/black"
        app:strokeWidth="5dp"
        app:strokeColor="@color/white"
        android:padding="5dp"

        android:layout_marginStart="100dp"


        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_pic"
        android:layout_alignEnd="@+id/profile_pic"
        android:layout_alignBottom="@+id/profile_pic"
        android:layout_marginTop="-58dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="2dp"
        android:clickable="true"
        app:srcCompat="@drawable/ic_baseline_photo_camera_24"
        android:focusable="true"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/bid_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/floatingActionButton"
        android:layout_marginTop="10dp"
        android:layout_marginStart="130dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/grey"

        android:text="Bid Connect" />

    <TextView
        android:id="@+id/edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:layout_below="@id/bid_connect"
        android:layout_marginStart="300dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/grey"


        />

    <TextView
        android:id="@+id/user_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User name"
        android:textStyle="bold"
        android:textSize="20dp"

        android:layout_marginStart="20dp"
        android:textColor="@color/asmani"
        android:layout_below="@id/edit_profile"/>

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_marginStart="20dp"
        android:layout_below="@id/user_name1"
        android:textSize="5dp"

        />
    <TextView
        android:id="@+id/email1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email-Id"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/asmani"
        android:layout_below="@id/editTextTextPersonName"/>

    <EditText
        android:id="@+id/email1_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_marginStart="20dp"
        android:layout_below="@id/email1"
        android:textSize="5dp"
        />
    <TextView
        android:id="@+id/mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mobile"
        android:textStyle="bold"
        android:textSize="20dp"

        android:layout_marginStart="20dp"
        android:textColor="@color/asmani"
        android:layout_below="@id/email1_text"/>

    <EditText
        android:id="@+id/mobile_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_marginStart="20dp"
        android:layout_below="@id/mobile"
        android:textSize="5dp"
        />
    <TextView
        android:id="@+id/password_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textStyle="bold"
        android:textSize="20dp"

        android:layout_marginStart="20dp"
        android:textColor="@color/asmani"
        android:layout_below="@id/mobile_text"/>

    <EditText
        android:id="@+id/password_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@id/password_profile"
        android:layout_marginStart="20dp"
        android:textSize="5dp"
        />


</RelativeLayout>